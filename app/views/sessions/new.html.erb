<h1>Login</h1> 
<%= link_to "Business Cards", '/' %>

<br></br>

<%= form_for(:user) do |f|%>   
<div>             
 <%= f.label :username %>
  <%= f.text_field :username %>
</div>
<div>
  <%= f.label :password %>
  <%= f.password_field :password %>   
  </div>
  <br>
<div>
 <%= f.submit "Log In", class: "btn-dark"%>
 </div>
<% end %>
